<div class="container">
  <div class="yachts-head">
    <h1><%= @yacht.name.upcase %></h1>
    <div>
      <%= link_to "Back", yachts_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="https://images.unsplash.com/photo-1567899378494-47b22a2ae96a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1561728130-afd430af0493?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1545958140-244047d78f3a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1970&q=80" class="d-block w-100" alt="...">
          </div>
    </div>
    <a class="slider-btn carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="slider-btn carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="yacht-about">
    <div>
      <h2>About <%= @yacht.name.upcase %></h2>
      <ul>
        <li><strong>Capacity:</strong> <%= @yacht.capacity %> persons</li>
        <li><strong>Price per day:</strong> Â£<%= @yacht.price %></li>
        <li><strong>Location:</strong> <%= @yacht.location %></li>
        <li><strong>Crew:</strong> <%=  @yacht.crew.nil? ? "No crew available" : "Crew available on request" %></li>
      </ul>
    </div>
    <div>
      <%= link_to "BOOK NOW", new_yacht_booking_path(@yacht), class: "btn btn-primary" %>
    </div>
  </div>

  <div class="yacht-things-to-know">
    <h2>Things to know</h2>
    <ul>
      <li>
        Check-in: After 14:00
      </li>
      <li>
        Check-out: 10:00
      </li>
    </ul>
  </div>

  <div class="yacht-cancellation">
    <h2>Cancellation Policy</h2>
    <ul>
      <li>
        Free cancellation for 48 hours
      </li>
      <li>
        After that, cancel up to 7 days before check-in and get a 50% refund, minus the service fee.
      </li>
    </ul>
  </div>
</div>
